<h2><%= job ? 'Edit Job' : 'Add Job' %></h2>

<% if (errors && errors.length) { %>
    <ul class="error-messages">
        <% errors.forEach(error => { %>
            <li><%= error %></li>
        <% }); %>
    </ul>
<% } %>

<form action="<%= job ? `/jobs/update/${job._id}` : '/jobs' %>" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div>
        <label for="company">Company:</label>
        <input type="text" id="company" name="company" value="<%= job ? job.company : '' %>" required>
    </div>
    
    <div>
        <label for="position">Position:</label>
        <input type="text" id="position" name="position" value="<%= job ? job.position : '' %>" required>
    </div>
    
    <div>
        <label for="status">Status:</label>
        <select id="status" name="status" required>
            <option value="pending" <%= job && job.status === 'pending' ? 'selected' : '' %>>Pending</option>
            <option value="interview" <%= job && job.status === 'interview' ? 'selected' : '' %>>Interview</option>
            <option value="offer" <%= job && job.status === 'offer' ? 'selected' : '' %>>Offer</option>
            <option value="declined" <%= job && job.status === 'declined' ? 'selected' : '' %>>Declined</option>
        </select>
    </div>
    
    <button type="submit"><%= job ? 'Update' : 'Add' %></button>
</form>

<a href="/jobs">Back to Job Listings</a>